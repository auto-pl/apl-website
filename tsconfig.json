{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modles/@types/"]
  },
  "include": [
    "src/app",
    "src/**/*"
  ],
  "paths": {
    "@Components": ["Components/*"],
    "@Containers": ["@Components/containers/*"],
    "@HOCs": ["@Components/HOCs/*"],
    "@Inputs": ["@Components/inputs/*"], // TODO: finish import paths
  }
}